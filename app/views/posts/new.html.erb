<h1>New Post</h1>
<%=form_for @post do |f| %>
	<p>
		<%= f.label :Title %><br>
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label :Body %><br>
		<%= f.text_area :body %>
	</p>
	<p>
		<%= f.select :category_id, Category.all.collect{|x| [x.name, x.id]}, {:include_blank => 'select one'} %><br>
	</p>
	<p>
		<%= f.submit "Add Post" %> | <%= link_to 'Go back', posts_path %>
	</p>
<% end %>
